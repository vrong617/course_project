<div class="window">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
    </div>
    <div class="col-md-3">
      <div class="notice">
        <h1 id="notice"><%= notice %></h1>
      </div>
    </div>
  </div>
  <h1 class="title-product">News</h1>

<% @articles.each_with_index do |(key, value), index| %>
    <div class="container">
      <div class="col-md-2">
        <img class="article-image" src=<%= @image_urls[index] %>>
      </div>
      <div class="col-md-10">
        <h3 class="title"><%= key %></h3><br>
        <h5 class="info"><%= value %></h5><br><br>
      </div>

    </div>
<% end %>
</div>
