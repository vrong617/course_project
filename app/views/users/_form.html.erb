<div class="col-md-2">
</div>
<div class="col-md-8">
  <div class="container">
    <legend>
      Enter user details
    </legend>
    <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
            <div id="error_explanation">
              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="col-md-12">
        <div class="row">
            <div class="field">
              <%= f.label :name %><br />
              <%= f.text_field :name, size: 40 %>
            </div>
            <div class="field">
              <%= f.label :password, 'Password' %><br />
              <%= f.text_field :password, size: 40 %>
            </div>
            <div class="field">
              <%= f.label :password_confirmation, 'Verify password' %><br />
              <%= f.text_field :password_confirmation, size: 40 %>
            </div>
            <div class="actions">
                <%= f.submit 'Create user' %>
            </div>
        </div>
        </div>
    <% end %>
  </div>
</div>
<div class="col-md-2">
</div>
