<% @index ||= 0 %>
<div class="row">
  <div class="col-md-8">
    <h1><%= @index+=1 %>. <%= line_item.product.title %></h1>
    <p>x <%=line_item.quantity%></p>
  </div>
  <div class="col-md-4">
    <div class="price">
      <h1><%= sprintf("$ %0.02f", line_item.total_price) %></h1>
    </div>
  </div>
</div>