<div class="row">
  <div class="col-md-3">
    <div class="notice">
      <h1 id="notice"><%= notice %></h1>
    </div>
  </div>
</div>
<div class="col-md-4">
</div>
<div class="col-md-4">
  <div class="container">
    <%= form_tag do %>
    <legend>
      Please Log In
    </legend>
    <div class="form">
        <div class="field">
          <%= label_tag :name, 'Name' %><br />
          <%= text_field_tag :name, params[:name] %>
        </div>
        <div class="field">
          <%= label_tag :password, 'Password' %><br />
          <%= password_field_tag :password, params[:password] %>
        </div>
        <div class="actions">
            <%= submit_tag 'Login' %>
        </div>
    </div>
        <% end %>
  </div>
</div>
<div class="col-md-4">
</div>